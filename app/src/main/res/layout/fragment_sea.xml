<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sea"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg">


    <com.zhan.haoqi.bottle.view.BottlePoolLayout
        android:id="@+id/bottle_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/throw_bottle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen20"
        android:layout_marginLeft="@dimen/dimen20"
        android:drawableTop="@mipmap/bottle_to_send"
        android:gravity="center"
        android:text="扔一个"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/catch_bottle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/throw_bottle"
        android:layout_marginRight="@dimen/dimen20"
        android:drawableTop="@mipmap/bottle_net_icon"
        android:gravity="center"
        android:text="捞一个"
        android:textSize="@dimen/text_size_12" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </RelativeLayout>

    <ImageView
        android:id="@+id/net_bottle"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_above="@+id/throw_bottle"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/bottle_net"
        android:visibility="gone" />


</RelativeLayout>
